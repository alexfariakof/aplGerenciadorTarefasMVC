@model IEnumerable<GerenciadorTarefas.Models.POCO.Tarefa>
@{
    ViewBag.Title = "Tarefa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" onclick="RegisterBtnSalvarOnClick()">Incluir</button>
<br>
<input id="inputPesquisar" placeholder="Digite para pesquisar..." />
<input id="btnPesquisar" type="button" class="btn btn-default">Confirmar</input>

<div class="container-fluid">
    <div class="row gridRow">
        <div class="col-xs-7 col-sm-7 col-lg-7 gridHeadCols">Título</div>
        <div class="col-xs-1 col-sm-1 col-lg-1 gridBodyColsCheck">&nbsp;</div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row gridRowData" onclick="RegisterBtnAltualizarOnClick('@item.Id', event.target)">
            <div class="col-xs-7 col-sm-7 col-lg-7 gridBodyCols"> @item.Titulo </div>
            <div class="col-xs-1 col-sm-1 col-lg-1 gridBodyColsCheck ">
                <input type="checkbox" class="gridCheckbox"  />
            </div>
        </div>
    }
</div>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog">
        <div class="panel panel-primary class">
            <div class="panel-heading">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cadastro de Tarefas</h4>
            </div>
            <div class="panel-body">
                <div class="control-group">
                    <label class="control-label" for="inputTarefa">Tarefa</label>
                    <div class="controls">
                        <textarea id="inputTarefa"  class="form-control" placeholder="Digite a tarefa..."  required="required" MaxLength="100" style="width:100%" rows="4"> </textarea>
                        <span id="msgTarefa" class="msgValidacao" style="color: red; visibility: hidden">Informe uma tarefa.</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnSalvar" type="button" class="btn btn-default">Confirmar</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/_js/CadastroTarefa")
